# This config snippit managed by puppet
  mongodb:
    name: <%= @mongodb_name %>
    host: <%= @node %>
    port: <%= @port %>
    <%- if @username -%>
    username: <%= @username %>
    password: <%= @password %>
    <%- end -%>
    databases:
    <%- @databases.each do |dbname| -%>
    - <%= dbname %>
    <%- end -%>

